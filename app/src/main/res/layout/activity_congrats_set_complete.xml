<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".dashboard.Congrats_SetComplete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:gravity="center"
        android:layout_weight="0.9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Congratulations...\n You Completed This Day"
            android:textSize="22sp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/balsamiq_sans_bold"></TextView>
<!--        <com.airbnb.lottie.LottieAnimationView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="50dp"-->
<!--            app:lottie_autoPlay="true"-->
<!--            android:layout_weight="0.8"-->
<!--            app:lottie_fileName="32000-congratulation-greetings.json"-->
<!--            app:lottie_loop="true"-->
<!--            app:lottie_speed="1"></com.airbnb.lottie.LottieAnimationView>-->

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            app:lottie_autoPlay="true"
            app:lottie_fileName="45662-fist-bump.json"
            app:lottie_loop="true"
            app:lottie_speed="1"></com.airbnb.lottie.LottieAnimationView>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:lottie_autoPlay="true"
            app:lottie_fileName="72706-you-rock.json"
            app:lottie_loop="true"
            app:lottie_speed="1"></com.airbnb.lottie.LottieAnimationView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="0.1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/backBTN"
            android:textColor="@color/white"></Button>
    </LinearLayout>

</LinearLayout>